{
  "name": "@repo/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "ultracite check",
    "format": "ultracite fix --unsafe",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "db:push": "bun -F ./packages/db push",
    "db:migrate": "bun -F ./packages/db migrate",
    "db:gen": "bun -F ./packages/db generate",
    "db:studio": "bun -F ./packages/db studio",
    "auth:gen": "bun -F ./packages/auth generate",
    "docker:up": "docker compose -f infra/docker/docker-compose.dev.yml up -d",
    "docker:down": "docker compose -f infra/docker/docker-compose.dev.yml down -v",
    "docker:refresh": "bun docker:down && bun docker:up"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^24.10.1",
    "@typescript/native-preview": "^7.0.0-dev.20251204.1",
    "lefthook": "^2.0.7",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3",
    "ultracite": "^6.3.9"
  },
  "packageManager": "bun@1.3.3",
  "engines": {
    "node": ">=24"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tooling/*"
    ],
    "catalog": {
      "@t3-oss/env-core": "^0.13.8",
      "@types/pg": "^8.15.6",
      "better-auth": "^1.4.5",
      "elysia": "^1.4.18",
      "zod": "^4.1.13",
      "@types/bun": "^1.3.3"
    }
  }
}
