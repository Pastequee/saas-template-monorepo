{
  "name": "@repo/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --ui tui",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "format": "biome format --fix",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "build:web": "bun -F ./apps/web build",
    "build:server": "bun -F ./apps/server build",
    "build:docker:web": "docker build -f docker/Dockerfile.web -t web-image .",
    "build:docker:server": "docker build -f docker/Dockerfile.server -t server-image .",
    "db:push": "bun -F ./packages/db push",
    "db:migrate": "bun -F ./packages/db migrate",
    "db:gen": "bun -F ./packages/db generate",
    "auth:gen": "bun -F ./packages/auth generate",
    "docker:up": "docker compose -f docker/docker-compose.dev.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.dev.yml down -v",
    "docker:reset": "bun docker:down && bun docker:up",
    "clean": "find . -type d \\( -name \"node_modules\" -o -name \"dist\" -o -name \"build\" -o -name \".turbo\" -o -name \".cache\" -o -name \".tanstack\" \\) -prune -exec rm -rf {} + 2>/dev/null || true"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "lefthook": "^2.1.0",
    "turbo": "^2.8.3",
    "typescript": "catalog:",
    "ultracite": "^7.1.5"
  },
  "packageManager": "bun@1.3.9",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@types/bun": "^1.3.8",
      "@types/node": "^24.10.9",
      "typescript": "^5.9.3",
      "@typescript/native-preview": "^7.0.0-dev.20260201.1",
      "@t3-oss/env-core": "^0.13.10",
      "drizzle-orm": "^1.0.0-beta.9-e89174b",
      "@types/pg": "^8.16.0",
      "better-auth": "^1.4.18",
      "elysia": "^1.4.22",
      "zod": "^4.3.6"
    }
  }
}
