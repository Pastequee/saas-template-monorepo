{
  "name": "@repo/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "ultracite check",
    "format": "ultracite fix --unsafe",
    "typecheck": "turbo run typecheck",
    "db:push": "pnpm -F @repo/db push",
    "db:migrate": "pnpm -F @repo/db migrate",
    "db:generate": "pnpm -F @repo/db generate",
    "db:studio": "pnpm -F @repo/db studio",
    "auth:generate": "pnpm -F @repo/auth generate"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "lefthook": "^1.13.4",
    "turbo": "^2.5.8",
    "ultracite": "^5.4.5"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=22"
  }
}
