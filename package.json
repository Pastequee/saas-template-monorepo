{
  "name": "@repo/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "ultracite check",
    "format": "ultracite fix --unsafe",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "db:push": "bun -F ./packages/db-prisma push",
    "db:migrate": "bun -F ./packages/db-prisma migrate",
    "db:generate": "bun -F ./packages/db-prisma generate",
    "db:studio": "bun -F ./packages/db-prisma studio",
    "auth:generate": "bun -F ./packages/auth generate",
    "dev:docker": "docker compose -f infra/docker/docker-compose.dev.yml up -d",
    "dev:docker:down": "docker compose -f infra/docker/docker-compose.dev.yml down -v",
    "dev:docker:refresh": "bun dev:docker:down && bun dev:docker"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^24.10.1",
    "@typescript/native-preview": "^7.0.0-dev.20251126.1",
    "lefthook": "^2.0.4",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "ultracite": "^6.3.6"
  },
  "packageManager": "bun@1.3.3",
  "engines": {
    "node": ">=24"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tooling/*"
    ],
    "catalog": {
      "@t3-oss/env-core": "^0.13.8",
      "@types/pg": "^8.15.6",
      "better-auth": "^1.4.3",
      "elysia": "^1.4.16",
      "zod": "^4.1.13",
      "@types/bun": "^1.3.3"
    }
  }
}