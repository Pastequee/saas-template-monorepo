{
  "name": "@repo/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev:trpc": "turbo run -F @repo/web-trpc dev",
    "dev:convex": "turbo @repo/web-convex run dev",
    "lint": "ultracite check",
    "format": "ultracite fix --unsafe",
    "typecheck": "turbo run typecheck",
    "db:push": "bun -F @repo/db push",
    "db:migrate": "bun -F @repo/db migrate",
    "db:generate": "bun -F @repo/db generate",
    "db:studio": "bun -F @repo/db studio",
    "auth:generate": "bun -F @repo/auth generate"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "lefthook": "^1.13.4",
    "turbo": "^2.5.8",
    "ultracite": "^5.4.5",
    "typescript": "^5.9.3",
    "@typescript/native-preview": "catalog:",
    "@types/node": "^22.18.6"
  },
  "packageManager": "bun@1.3.0",
  "engines": {
    "node": ">=22"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tooling/*"
    ],
    "catalog": {
      "@convex-dev/better-auth": "^0.8.6",
      "@t3-oss/env-core": "^0.13.8",
      "@trpc/client": "^11.6.0",
      "@trpc/server": "^11.6.0",
      "@trpc/tanstack-react-query": "^11.6.0",
      "better-auth": "1.3.8",
      "convex": "^1.27.3",
      "dotenv-cli": "^10.0.0",
      "drizzle-orm": "^0.44.5",
      "@prisma/client": "^6.16.3",
      "prisma": "^6.16.3",
      "zod": "^4.1.11",
      "@typescript/native-preview": "^7.0.0-dev.20251013.1"
    }
  }
