{
  "name": "@repo/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "ultracite check",
    "format": "ultracite fix --unsafe",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "db:push": "pnpm -F @repo/db push",
    "db:migrate": "pnpm -F @repo/db migrate",
    "db:generate": "pnpm -F @repo/db generate",
    "db:studio": "pnpm -F @repo/db studio",
    "auth:generate": "pnpm -F @repo/auth generate",
    "dev:docker": "docker compose -f infra/docker/docker-compose.dev.yml up -d",
    "dev:docker:down": "docker compose -f infra/docker/docker-compose.dev.yml down -v",
    "dev:docker:refresh": "pnpm dev:docker:down && pnpm dev:docker"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^24.10.1",
    "@typescript/native-preview": "^7.0.0-dev.20251113.1",
    "lefthook": "^2.0.4",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "ultracite": "^6.3.2"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=24"
  }
}
