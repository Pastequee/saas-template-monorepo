model Todo {
  id     String @id @default(uuid(7)) @db.Uuid
  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  content String
  status  TodoStatus

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("public")
}

enum TodoStatus {
  pending
  completed

  @@schema("public")
}
