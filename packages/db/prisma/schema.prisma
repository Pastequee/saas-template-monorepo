generator client {
  provider = "prisma-client"
  output   = "../src/_generated"

  engineType = "client"

  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["auth", "public"]
}

generator zod {
  provider = "prisma-zod-generator"
  config   = "./zod-generator.config.json"
}
