enum TodoStatus {
  PENDING
  COMPLETED

  @@schema("public")
}

model Todos {
  id     String @id @default(uuid(7))
  userId String

  content String
  status  TodoStatus @default(PENDING)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("todos")
  @@schema("public")
}
