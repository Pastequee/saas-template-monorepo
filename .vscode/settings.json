{
	"typescript.tsdk": "./node_modules/typescript/lib",

	"editor.defaultFormatter": "oxc.oxc-vscode",

	"[javascript]": {
		"editor.defaultFormatter": "oxc.oxc-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "oxc.oxc-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "oxc.oxc-vscode"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "oxc.oxc-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "oxc.oxc-vscode"
	},
	"[css]": {
		"editor.defaultFormatter": "oxc.oxc-vscode"
	},

	"editor.formatOnPaste": false,
	"editor.formatOnSave": true,

	"editor.codeActionsOnSave": {
		"source.fixAll.oxc": "explicit"
	},

	"emmet.showExpandedAbbreviation": "never",
	"json.schemaDownload.enable": true,

	"files.watcherExclude": {
		"**/routeTree.gen.ts": true
	},
	"search.exclude": {
		"**/routeTree.gen.ts": true
	},
	"files.readonlyInclude": {
		"**/routeTree.gen.ts": true
	},
	"typescript.preferences.importModuleSpecifier": "non-relative",

	"workbench.editor.customLabels.patterns": {
		"**/package.json": "${dirname} - package.json",
		"**/src/index.{ts,tsx}": "${dirname(1)}/src - index",
		"**/src/env.ts": "${dirname(1)} - env",
		"**/src/lib/env.ts": "${dirname(2)} - env",
		"**/.env*": "${dirname} - ${filename}.${extname}",
		"**/index.{ts,tsx}": "${dirname} - index",
		"**/route.tsx": "${dirname} - route",
		"**/controller.ts": "${dirname} - controller",
		"**/service.ts": "${dirname} - service"
	},

	"peacock.color": "#42b883",
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#65c89b",
		"activityBar.background": "#65c89b",
		"activityBar.foreground": "#15202b",
		"activityBar.inactiveForeground": "#15202b99",
		"activityBarBadge.background": "#945bc4",
		"activityBarBadge.foreground": "#e7e7e7",
		"commandCenter.border": "#15202b99",
		"sash.hoverBorder": "#65c89b",
		"statusBar.background": "#42b883",
		"statusBar.foreground": "#15202b",
		"statusBarItem.hoverBackground": "#359268",
		"statusBarItem.remoteBackground": "#42b883",
		"statusBarItem.remoteForeground": "#15202b",
		"titleBar.activeBackground": "#42b883",
		"titleBar.activeForeground": "#15202b",
		"titleBar.inactiveBackground": "#42b88399",
		"titleBar.inactiveForeground": "#15202b99"
	}
}
