{
  "name": "@repo/backend",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "imports": {
    "#routers/*": "./src/routers/*.ts",
    "#lib/*": "./src/lib/*.ts",
    "#middlewares/*": "./src/middlewares/*.ts",
    "#services/*": "./src/services/*.ts"
  },
  "scripts": {
