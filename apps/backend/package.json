    "@repo/utils": "workspace:*",
    "@t3-oss/env-core": "catalog:",
    "@tqman/nice-logger": "^1.1.1",
    "elysia": "catalog:",
    "pino": "^10.1.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@types/pg": "catalog:",
    "pino-pretty": "^13.1.3"
  }
}
