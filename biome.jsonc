{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/core", "ultracite/react"],
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "linter": {
    "rules": {
      "correctness": {
        "noChildrenProp": "off"
      },
      "style": {
        "noHeadElement": "off",
        "noNestedTernary": "off",
        "useBlockStatements": "off",
        "noMagicNumbers": "off",
        "useNamingConvention": "off"
      },
      "performance": {
        "noBarrelFile": "off",
        "noNamespaceImport": "off"
      }
    }
  },
  "files": {
    "includes": ["**/*", "!**/*.gen.ts", "!**/_generated", "!**/*.json"]
  },
  "overrides": [
    {
      "includes": ["**/$.ts"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    }
  ]
}
